<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/edittext_design"
                android:hint="Enter a Name"
                android:textColorHint="@color/hint_green"
                android:layout_marginStart="10dp"
                android:singleLine="true"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/dark_green"
                android:layout_marginEnd="10dp">
            </EditText>

            <TextView
                android:id="@+id/dateofbirth"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_design"
                android:textColorHint="@color/hint_green"
                android:singleLine="true"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/dark_green"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="start|center"
                android:inputType="date"
                android:hint="Enter a Date of Birth"
                android:textSize="19dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_design"
                android:textColorHint="@color/hint_green"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/dark_green"
                android:layout_below="@+id/dateofbirth"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="Enter an Email id"
                android:singleLine="true"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/password"
                android:layout_below="@+id/email"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="50dp"
                android:background="@drawable/edittext_design"
                android:textColorHint="@color/hint_green"
                android:singleLine="true"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/dark_green"
                android:hint="Enter a New Password"
                android:inputType="textPassword" />


            <EditText
                android:id="@+id/confirmPassword"
                android:layout_below="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/edittext_design"
                android:textColorHint="@color/hint_green"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/dark_green"
                android:hint="Re - Enter a New Password"
                android:singleLine="true"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/mobileno"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/password"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:maxLength="10"
                android:background="@drawable/edittext_design"
                android:textColorHint="@color/hint_green"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/dark_green"
                android:hint="Enter a Mobile No"
                android:singleLine="true"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/college"
                android:layout_below="@+id/phone"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:background="@drawable/edittext_design"
                android:textColorHint="@color/hint_green"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/dark_green"
                android:hint="Enter a College Name"
                android:singleLine="true"
                android:inputType="text"/>

            <EditText
                android:id="@+id/degree"
                android:layout_below="@+id/phone"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:background="@drawable/edittext_design"
                android:textColorHint="@color/hint_green"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/dark_green"
                android:hint="Enter a Degree Name"
                android:singleLine="true"
                android:inputType="text"/>

            <EditText
                android:id="@+id/city"
                android:layout_below="@+id/phone"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:background="@drawable/edittext_design"
                android:textColorHint="@color/hint_green"
                android:singleLine="true"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/dark_green"
                android:hint="Enter a City Name"
                android:inputType="text"/>

            <Button
                android:id="@+id/register"
                android:layout_below="@+id/college"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_design"
                android:onClick="permission"
                android:textColor="@color/dark_green"
                android:text="Register"/>

            <TextView
                android:id="@+id/link_message_of_login"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@+id/register"
                android:layout_marginTop="20dp"
                android:text="Already Registered. Do Login"
                android:textAlignment="center"
                android:textColor="@color/dark_green"/>

        </LinearLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>