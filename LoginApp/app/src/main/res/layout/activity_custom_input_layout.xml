<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomInputLayout">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom Input Layout"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/showone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:textColor="#111111"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="120dp"
        app:layout_constraintTop_toBottomOf="@+id/appbarlayout4"
        app:layout_constraintLeft_toLeftOf="@+id/appbarlayout4"></TextView>
    <TextView
        android:id="@+id/showtwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:textColor="#111111"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@+id/appbarlayout4"
        app:layout_constraintLeft_toRightOf="@+id/showone"></TextView>
    <TextView
        android:id="@+id/showthree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:textColor="#111111"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@+id/appbarlayout4"
        app:layout_constraintLeft_toRightOf="@+id/showtwo"></TextView>
    <TextView
        android:id="@+id/txtforth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:textColor="#111111"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@+id/appbarlayout4"
        app:layout_constraintLeft_toRightOf="@+id/showthree"></TextView>
    <TextView
        android:id="@+id/txtzero"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="0"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#111111"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/appbarlayout4"
        app:layout_constraintLeft_toLeftOf="@+id/appbarlayout4"></TextView>
    <TextView
        android:id="@+id/txtone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="1"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#111111"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/appbarlayout4"
        app:layout_constraintLeft_toRightOf="@+id/txtzero"></TextView>
    <TextView
        android:id="@+id/txttwo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="2"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#111111"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/appbarlayout4"
        app:layout_constraintLeft_toRightOf="@+id/txtone"></TextView>
    <TextView
        android:id="@+id/txtthree"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="3"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#111111"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/txtzero"
        app:layout_constraintLeft_toLeftOf="@+id/appbarlayout4"></TextView>
    <TextView
        android:id="@+id/txtfourth"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="4"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#111111"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/txtzero"
        app:layout_constraintLeft_toRightOf="@+id/txtthree"></TextView>
    <TextView
        android:id="@+id/txtfive"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="5"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#111111"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/txtzero"
        app:layout_constraintLeft_toRightOf="@+id/txtfourth"></TextView>
    <TextView
        android:id="@+id/txtsixth"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="6"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#111111"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/txtthree"
        app:layout_constraintLeft_toLeftOf="@+id/appbarlayout4"></TextView>
    <TextView
        android:id="@+id/txtseven"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="7"
        android:textSize="20dp"
        android:textColor="#111111"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/txtthree"
        app:layout_constraintLeft_toRightOf="@+id/txtsixth"></TextView>
    <TextView
        android:id="@+id/txteight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="8"
        android:textSize="20dp"
        android:textColor="#111111"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/txtthree"
        app:layout_constraintLeft_toRightOf="@+id/txtseven"></TextView>
    <TextView
        android:id="@+id/txtnine"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="9"
        android:textSize="20dp"
        android:textColor="#111111"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/txteight"
        app:layout_constraintLeft_toLeftOf="@+id/appbarlayout4"></TextView>
    <TextView
        android:id="@+id/txtback"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="B"
        android:textSize="20dp"
        android:textColor="#111111"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/txteight"
        app:layout_constraintLeft_toRightOf="@+id/txtnine"></TextView>
    <TextView
        android:id="@+id/txtclear"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="C"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#111111"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/txteight"
        app:layout_constraintLeft_toRightOf="@+id/txtback"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>