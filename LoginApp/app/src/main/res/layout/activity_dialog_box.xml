<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage2"
    tools:context=".DialogBox">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Progress Dialog"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:background="@drawable/editext_design3"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/appbarlayout4"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button3"
                    android:background="@drawable/editext_design3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alert Dialog"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/button2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button4"
                    android:background="@drawable/editext_design3"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:text="Custom Alert Dialog"
                    app:layout_constraintTop_toBottomOf="@+id/button3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button5"
                android:background="@drawable/editext_design3"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:text="Sim card Deteaction"
                app:layout_constraintTop_toBottomOf="@+id/button4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#121212"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#121212"
                android:textSize="20dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button6"
                android:background="@drawable/editext_design3"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:text="Device Deteaction"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button7"
                android:background="@drawable/editext_design3"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:text="Tab Layout"
                app:layout_constraintTop_toBottomOf="@+id/button6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="I am Not Robot" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button8"
                android:background="@drawable/editext_design3"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:text="Splesh Screen"
                app:layout_constraintTop_toBottomOf="@+id/checkBox"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <Spinner
                android:id="@+id/spinner"
                android:layout_margin="10dp"
                android:background="@drawable/editext_design2"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button9"
                android:background="@drawable/editext_design3"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:text="Audio Record and Play"
                app:layout_constraintTop_toBottomOf="@+id/spinner"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button10"
                android:background="@drawable/editext_design3"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:text="Custom Input Layout"
                app:layout_constraintTop_toBottomOf="@+id/spinner"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button11"
                android:background="@drawable/editext_design3"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:text="Dark Mode"
                app:layout_constraintTop_toBottomOf="@+id/spinner"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button12"
                android:background="@drawable/editext_design3"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:text="View and Download df file"
                app:layout_constraintTop_toBottomOf="@+id/button11"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button13"
                android:background="@drawable/editext_design3"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:text="Face Recognization"
                app:layout_constraintTop_toBottomOf="@+id/button12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button14"
                android:background="@drawable/editext_design3"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:text="FingerPrint Authentication"
                app:layout_constraintTop_toBottomOf="@+id/button13"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button15"
                android:background="@drawable/editext_design3"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:text="PDF create and Download"
                app:layout_constraintTop_toBottomOf="@+id/button14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button16"
                android:background="@drawable/editext_design3"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:text="HOLD STATE OF AN APP"
                app:layout_constraintTop_toBottomOf="@+id/button15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button17"
                android:background="@drawable/editext_design3"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:text="Ralative Layout"
                app:layout_constraintTop_toBottomOf="@+id/button15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button18"
                android:background="@drawable/editext_design3"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:text="Different Layouts"
                app:layout_constraintTop_toBottomOf="@+id/button17"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </LinearLayout>
        </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>