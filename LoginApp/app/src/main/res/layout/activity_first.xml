<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightyellow"
    tools:context=".FirstActivity">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSQLite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SQLite Connectivity"
                android:layout_marginTop="15dp"
                android:textColor="@color/grayS"
                android:background="@drawable/custom_button"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCalculator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculator"
                android:layout_marginTop="15dp"
                android:textColor="@color/grayS"
                android:background="@drawable/custom_button"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCalculator2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculator 2"
                android:layout_marginTop="15dp"
                android:textColor="@color/grayS"
                android:background="@drawable/custom_button" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRegisterAPIVolley"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration API Volley"
                android:layout_marginTop="15dp"
                android:textColor="@color/grayS"
                android:background="@drawable/custom_button" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRecyclerAndList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recycler View and List view"
                android:layout_marginTop="15dp"
                android:textColor="@color/grayS"
                android:background="@drawable/custom_button" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFliterAPI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filter API"
                android:layout_marginTop="15dp"
                android:textColor="@color/grayS"
                android:background="@drawable/custom_button" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnImageAPI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Image API"
                android:layout_marginTop="15dp"
                android:textColor="@color/grayS"
                android:background="@drawable/custom_button" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>