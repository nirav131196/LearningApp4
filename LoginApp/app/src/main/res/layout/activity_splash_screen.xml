<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayP"
     tools:context=".SplashScreen">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="NIRAV GIRNARI"
        android:visibility="gone"
        android:textAlignment="center"
        android:background="@drawable/custom_button"
        app:layout_constraintTop_toBottomOf="@+id/button19"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button19"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="Button"
        android:textColor="@color/grayS"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/custom_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <EditText
        android:id="@+id/edtId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible"
        android:ems="10"
        android:inputType="phone"
        android:paddingLeft="15dp"
        android:background="@drawable/custom_button"
        android:hint="Enter id to Delete or Update"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="15dp"
        android:background="@drawable/custom_button"
        android:hint="Enter Name"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edtId"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <EditText
        android:id="@+id/edtSurname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible"
        android:ems="10"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:background="@drawable/custom_button"
        android:hint="Enter surname"
        app:layout_constraintTop_toBottomOf="@+id/edtName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnInsert"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:text="Insert"
        android:layout_marginTop="10dp"
        android:textColor="@color/grayS"
        app:layout_constraintTop_toBottomOf="@+id/edtSurname"
        android:background="@drawable/custom_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textColor="@color/grayS"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btnInsert"
        android:background="@drawable/custom_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textColor="@color/grayS"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btnUpdate"
        android:background="@drawable/custom_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSelectData"
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDelete"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>