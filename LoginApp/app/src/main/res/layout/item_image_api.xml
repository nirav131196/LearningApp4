<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="220dp"
        android:layout_height="400dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/cardview_event"
        app:cardBackgroundColor="@color/darg_gray">


        <ImageView
            android:id="@+id/imgEventNew"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:scaleType="fitXY" />

        <ProgressBar
            android:id="@+id/progress_bar_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgEventNew"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="185dp"
                android:layout_below="@+id/imgEventNew"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginRight="10dp"
                android:text="Rosurgence 2023"
                android:textColor="@color/white"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/txt_details"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginRight="10dp"
                android:text="Unlimited Bear | Music | St.. "
                android:textSize="14dp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="45dp"
        android:id="@+id/cardCircle"
        android:backgroundTint="@color/darg_gray">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_border_gray"
            app:civ_border_color="@color/darg_gray"
            app:civ_border_width="4dp" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>