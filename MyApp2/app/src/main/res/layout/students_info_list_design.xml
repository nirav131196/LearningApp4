<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/StudentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="25dp"
        android:textSize="20dp"
        android:text="ID :  "/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/StudentId"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="25dp"
        android:textSize="20dp"
        android:text="NAME :  "/>
    <TextView
        android:id="@+id/surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20dp"
        android:layout_marginEnd="25dp"
        android:text="SURNAME :  "/>
    <TextView
        android:id="@+id/rollNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/surname"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20dp"
        android:text="ROLL NUMBER :  "/>
    <TextView
        android:id="@+id/className"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@+id/rollNumber"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20dp"
        android:text="CLASS : "/>
    <TextView
        android:id="@+id/schoolName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/className"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20dp"
        android:layout_marginEnd="25dp"
        android:text="SCHOOL NAME :  "/>

    <TextView
        android:id="@+id/dataStudentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toRightOf="@+id/StudentId"
        android:textSize="20dp"
        android:text="--"/>
    <TextView
        android:id="@+id/dataName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/StudentId"
        app:layout_constraintLeft_toRightOf="@+id/name"
        android:textSize="20dp"
        android:text="--"/>
    <TextView
        android:id="@+id/dataSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintLeft_toRightOf="@+id/surname"
        android:textSize="20dp"
        android:text="--"/>
    <TextView
        android:id="@+id/dataRollNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/surname"
        app:layout_constraintLeft_toRightOf="@+id/rollNumber"
        android:textSize="20dp"
        android:text="--"/>
    <TextView
        android:id="@+id/dataClassName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rollNumber"
        app:layout_constraintLeft_toRightOf="@+id/className"
        android:textSize="20dp"
        android:text="--"/>
    <TextView
        android:id="@+id/dataSchoolName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/className"
        app:layout_constraintLeft_toRightOf="@+id/schoolName"
        android:textSize="20dp"
        android:text="--"/>

</androidx.constraintlayout.widget.ConstraintLayout>